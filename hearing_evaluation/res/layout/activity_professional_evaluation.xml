<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/genericwhitebackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hearing_evaluation.ProfessionalEvaluationActivity" >
    
    <TextView
        android:id="@+id/appointmentTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:gravity="left|center_horizontal"
        android:text="The audiologist should contact me regarding an appointment by:"
        android:textColor="#c5178b"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/checkBoxPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxEmail"
        android:text="phone"
        android:textColor="#c5178b"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/checkBoxEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkBoxPhone"
        android:layout_below="@+id/appointmentTxt"
        android:layout_marginTop="26dp"
        android:text="email"
        android:textColor="#c5178b"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/btnSendRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/btnsendrequest" />

</RelativeLayout>
