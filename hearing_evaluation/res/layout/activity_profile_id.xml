<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/genericgreywhitebackgroundsmall"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hearing_evaluation.ProfileIdActivity" >

    <Spinner
        android:id="@+id/spinnerProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/btnStartTestProfileAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnNewUser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        android:fitsSystemWindows="true"
        android:maxHeight="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/btnstarttest" />

    <ImageButton
        android:id="@+id/btnDeleteProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnStartTestProfileAct"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        android:fitsSystemWindows="true"
        android:maxHeight="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/btndeleteprofile" />

    <ImageButton
        android:id="@+id/btnNewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/spinnerProfile"
        android:layout_marginTop="77dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:baselineAlignBottom="true"
        android:cropToPadding="true"
        android:fitsSystemWindows="true"
        android:maxHeight="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/btnnewprofile" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp"
        android:text="Choose profile"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

</RelativeLayout>