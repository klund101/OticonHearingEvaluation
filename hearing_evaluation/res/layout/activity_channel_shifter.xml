<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/channelshiftbg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hearing_evaluation.ChannelShifterActivity" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnChannelShifterRight"
        android:layout_centerHorizontal="true"
        android:text="or"
        android:layout_marginBottom="20dp"
        android:textColor="#c5178b"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/btnChannelShifterRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="false"
        android:layout_marginBottom="147dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/textView3"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:baselineAlignBottom="true"
        android:cropToPadding="true"
        android:duplicateParentState="true"
        android:fitsSystemWindows="true"
        android:scaleType="fitXY"
        android:src="@drawable/btnright" />

    <ImageButton
        android:id="@+id/btnChannelShifterLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnChannelShifterRight"
        android:layout_alignBottom="@+id/btnChannelShifterRight"
        android:layout_alignParentLeft="false"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/textView3"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:baselineAlignBottom="true"
        android:cropToPadding="true"
        android:duplicateParentState="true"
        android:fitsSystemWindows="true"
        android:scaleType="fitXY"
        android:src="@drawable/btnleft" />

</RelativeLayout>