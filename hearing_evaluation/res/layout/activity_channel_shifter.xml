<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/genericgreywhitebackgroundsmall"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hearing_evaluation.ChannelShifterActivity" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnChannelShifterRight"
        android:layout_centerHorizontal="true"
        android:text="or"
        android:layout_marginBottom="10dp"
        android:textColor="#c5178b"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="156dp"
        android:adjustViewBounds="true"
        android:maxWidth="230dp"
        android:scaleType="fitXY"
        android:src="@drawable/whichear" />

    <ImageButton
        android:id="@+id/btnChannelShifterLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnChannelShifterRight"
        android:layout_alignBottom="@+id/btnChannelShifterRight"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:baselineAlignBottom="true"
        android:cropToPadding="true"
        android:duplicateParentState="true"
        android:fitsSystemWindows="true"
        android:maxHeight="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/btnleft" />

    <ImageButton
        android:id="@+id/btnChannelShifterRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="53dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:baselineAlignBottom="true"
        android:cropToPadding="true"
        android:duplicateParentState="true"
        android:fitsSystemWindows="true"
        android:maxHeight="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/btnright" />

</RelativeLayout>