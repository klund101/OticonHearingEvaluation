<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/genericwhitebackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hearing_evaluation.ResultActivity" >

    <TextView
        android:id="@+id/results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Audiogram - What does it mean?" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
       
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnInterpretation"
        android:layout_below="@+id/results"
        android:minHeight="10sp" >

    </com.github.mikephil.charting.charts.LineChart>

    <EditText
        android:id="@+id/userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSendEmail"
        android:layout_alignLeft="@+id/chart"
        android:layout_alignRight="@+id/chart"
        android:ems="10"
        android:enabled="true"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="#c5178b" >

        <requestFocus />
    </EditText>

    <ImageButton
        android:id="@+id/btnInterpretation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/userEmail"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxHeight="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/btninterpretation" />

    <ImageButton
        android:id="@+id/btnSendEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCloseResults"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxHeight="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/btnemail" />

    <ImageButton
        android:id="@+id/btnCloseResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnSendEmail"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxHeight="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/btnclose" />

    <ImageView
        android:id="@+id/audiogramCross1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chart"
        android:layout_alignTop="@+id/chart"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/audiogramcrosssmall" />
    <ImageView
        android:id="@+id/audiogramCross2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chart"
        android:layout_alignTop="@+id/chart"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/audiogramcrosssmall" />
   <ImageView
        android:id="@+id/audiogramCross3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chart"
        android:layout_alignTop="@+id/chart"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/audiogramcrosssmall" />
   <ImageView
        android:id="@+id/audiogramCross4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chart"
        android:layout_alignTop="@+id/chart"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/audiogramcrosssmall" />
   <ImageView
        android:id="@+id/audiogramCross5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chart"
        android:layout_alignTop="@+id/chart"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/audiogramcrosssmall" />
   <ImageView
        android:id="@+id/audiogramCross6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chart"
        android:layout_alignTop="@+id/chart"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/audiogramcrosssmall" />
   <ImageView
        android:id="@+id/audiogramCross7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chart"
        android:layout_alignTop="@+id/chart"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/audiogramcrosssmall" />

   <ImageView
       android:id="@+id/audiogrambanana"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignTop="@+id/results"
       android:layout_toRightOf="@+id/chart"
       android:adjustViewBounds="true"
       android:scaleType="fitXY"
       android:src="@drawable/audiogrambanana" />

   <ImageView
       android:id="@+id/bird"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:src="@drawable/iconbird" />

   <ImageView
       android:id="@+id/bus"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:src="@drawable/iconbus" />

   <ImageView
       android:id="@+id/dog"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:src="@drawable/icondog" />

   <ImageView
       android:id="@+id/phone"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:src="@drawable/iconphone" />

   <ImageView
       android:id="@+id/plane"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:src="@drawable/iconplane" />

   <ImageView
       android:id="@+id/tree"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:src="@drawable/icontree" />

   <ImageView
       android:id="@+id/watertap"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:src="@drawable/iconwatertap" />

   <ImageView
       android:id="@+id/normalHearing"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_alignParentTop="true"
       android:src="@drawable/normalhearing"
       android:scaleType="center"/>

   <ImageView
       android:id="@+id/profoundHearing"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_alignParentTop="true"
       android:src="@drawable/profoundhearing"
       android:scaleType="center"/>

</RelativeLayout>