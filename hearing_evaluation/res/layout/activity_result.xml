<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/genericwhitebackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hearing_evaluation.ResultActivity" >

    <TextView
        android:id="@+id/results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audiogram" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnInterpretation"
        android:layout_below="@+id/results"
        android:minHeight="10sp" >

    </com.github.mikephil.charting.charts.LineChart>

    <ImageButton
        android:id="@+id/btnCloseResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userEmail"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxHeight="60dp"
        android:scaleType="fitXY"
        android:layout_marginTop="1dp"
        android:src="@drawable/btnclose" />

    <EditText
        android:id="@+id/userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSendEmail"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:enabled="true"
        android:gravity="center_vertical"
        android:inputType="textEmailAddress" >

        <requestFocus />
    </EditText>

    <ImageButton
        android:id="@+id/btnSendEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCloseResults"
        android:layout_alignLeft="@+id/btnCloseResults"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxHeight="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/btnemail" />

    <ImageButton
        android:id="@+id/btnInterpretation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/userEmail"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxHeight="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/btninterpretation" />

</RelativeLayout>