<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/genericgreywhitebackgroundsmall"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hearing_evaluation.TestActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnYes"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:adjustViewBounds="true"
        android:maxWidth="270dp"
        android:scaleType="fitXY"
        android:src="@drawable/pressyestxt" />

    <ImageButton
        android:id="@+id/btnYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="107dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:baselineAlignBottom="true"
        android:cropToPadding="true"
        android:duplicateParentState="true"
        android:fitsSystemWindows="true"
        android:scaleType="fitXY"
        android:src="@drawable/btnyessmall" />

</RelativeLayout>