<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/genericgreywhitebackgroundwlogosmall"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hearing_evaluation.MainActivity" >

    <ImageButton
        android:id="@+id/btnArchive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnNewTest"
        android:layout_below="@+id/btnNewTest"
        android:layout_marginTop="29dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        android:fitsSystemWindows="true"
        android:maxHeight="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/btnarchive" />

    <ImageButton
        android:id="@+id/btnNewTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxHeight="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/btnnewtest" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="209dp"
        android:adjustViewBounds="true"
        android:maxWidth="300dp"
        android:scaleType="fitXY"
        android:src="@drawable/mainintrotxt" />

</RelativeLayout>