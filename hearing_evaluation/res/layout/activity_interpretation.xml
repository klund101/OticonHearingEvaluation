<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/genericwhitebackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hearing_evaluation.InterpretationActivity" >

    <TextView
        android:id="@+id/diagnosisTxtRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:gravity="left|center_horizontal"
        android:textColor="#ff0000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/diagnosisTxtLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/diagnosisTxtRight"
        android:layout_marginTop="17dp"
        android:gravity="left|center_horizontal"
        android:textColor="#0000ff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/diagnosisTxtRec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/diagnosisTxtLeft"
        android:layout_alignRight="@+id/diagnosisTxtLeft"
        android:layout_below="@+id/diagnosisTxtLeft"
        android:layout_marginTop="23dp"
        android:textColor="#c5178b"
        android:textSize="18sp" />

</RelativeLayout>
